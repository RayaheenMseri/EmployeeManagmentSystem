@model List<Employee>
@{
}
<h2 class="text-center mb-5">List of Employee</h2>
<div class="row mb-5">
    <div class="col">
        <a class="btn btn-primary" asp-controller="Employee" asp-action="Create">New Employee</a>
    </div>
    <div class="col">
    </div>
</div>

<table class="table">
    <thead class="">
        <tr>
            <th>Name</th>
            <th>Position</th>
            <th>Salary</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.Position</td>
                <td>@(employee.Salary)$</td>
            <td style="white-space: nowrap">
                    <a class="btn btn-primary btn-sm" asp-controller="Employee" asp-action="Edit"
               asp-route-id="@employee.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-controller="Employee" asp-action="Delete"
               asp-route-id="@employee.Id" >Delete</a>
        </td>
            </tr>
        }
    </tbody>
</table>